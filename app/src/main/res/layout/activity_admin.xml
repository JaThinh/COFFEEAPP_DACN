<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trang Quản Trị"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnManageProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Sản phẩm"/>

    <!-- SỬA LỖI: Thêm nút Quản lý Đơn hàng -->
    <Button
        android:id="@+id/btnManageOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Đơn hàng"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnViewRatings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem đánh giá"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnCustomerSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hỗ trợ Khách hàng"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnLogoutAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất"
        android:layout_marginTop="32dp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <!-- Header Section với Gradient -->
        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg_header_gradient" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-160dp"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/btn_logout"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bảng Điều Khiển"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.85"
                    android:text="Quản lý cửa hàng Coffee"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Nút Đăng xuất -->
            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_button_outline_white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Đăng xuất"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Statistics Section Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:weightSum="2">

            <!-- Card 1: Doanh thu -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_revenue_today"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOANH THU HÔM NAY"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_revenue_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="0 đ"
                        android:textColor="@color/brown_700"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Đơn hàng (Có thể click để xem đơn Pending) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_orders_new"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐƠN HÀNG MỚI"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_orders_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="0"
                        android:textColor="@color/brown_700"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chạm để xem >"
                        android:textSize="10sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Card 3: Tổng doanh thu -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_revenue_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TỔNG DOANH THU THÁNG"
                        android:textColor="#757575"
                        android:textSize="11sp"
                        android:letterSpacing="0.05"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_revenue_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="0 đ"
                        android:textColor="#2E7D32"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    app:tint="@color/brown_700" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            android:text="CHỨC NĂNG QUẢN LÝ"
            android:textColor="#424242"
            android:textSize="14sp"
            android:letterSpacing="0.05"
            android:textStyle="bold" />

        <!-- Management Menu Grid (2 Cột) -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:paddingHorizontal="10dp"
            android:rowCount="3">

            <!-- Menu 1: SẢN PHẨM -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_products"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dash_product"
                        app:tint="@color/brown_700"  android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SẢN PHẨM"
                        android:textColor="@color/brown_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu 2: DANH MỤC -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_categories"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dash_category"
                        app:tint="@color/brown_700"  android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DANH MỤC"
                        android:textColor="@color/brown_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu 3: ĐƠN HÀNG -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_orders"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dash_order"
                        app:tint="@color/brown_700"  android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ĐƠN HÀNG"
                        android:textColor="@color/brown_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Menu 5: NGƯỜI DÙNG -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_users"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dash_user"
                        app:tint="@color/brown_700"  android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NGƯỜI DÙNG"
                        android:textColor="@color/brown_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Menu 6: BANNER QUẢNG CÁO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_manage_banners"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_dash_banner"
                        app:tint="@color/brown_700"  android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BANNER"
                        android:textColor="@color/brown_700"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Top Selling Products Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="SẢN PHẨM BÁN CHẠY (Tháng này)"
            android:textColor="#424242"
            android:textSize="14sp"
            android:letterSpacing="0.05"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_top_selling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false" />
        
        <!-- Empty state for Top Selling -->
        <TextView
            android:id="@+id/tv_no_top_selling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có dữ liệu bán hàng"
            android:gravity="center"
            android:padding="24dp"
            android:textColor="#9E9E9E"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/maintain_product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Ảnh sản phẩm"/>

    <EditText
        android:id="@+id/maintain_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Tên sản phẩm"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/maintain_product_image" />

    <EditText
        android:id="@+id/maintain_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Giá sản phẩm"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/maintain_product_name" />

    <EditText
        android:id="@+id/maintain_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Mô tả sản phẩm"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@+id/maintain_product_price" />

    <EditText
        android:id="@+id/maintain_product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Danh mục sản phẩm"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/maintain_product_description" />

    <Button
        android:id="@+id/maintain_btn_apply_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Lưu thay đổi"
        android:backgroundTint="@color/brown_700"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/maintain_product_category" />

    <Button
        android:id="@+id/maintain_btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Xóa sản phẩm"
        android:backgroundTint="@color/status_cancelled"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/maintain_btn_apply_changes" />

</androidx.constraintlayout.widget.ConstraintLayout>